---
import { socialLinks, siteConfig } from '@/site-config'
import { SocialMediaIconId } from '@/types'
const year = new Date().getFullYear()
---

<footer class='mx-auto mt-24 w-full'>
  <div class='border-t border-border pt-5'>
    <div
      class='flex flex-col items-center gap-y-3 sm:flex sm:flex-row sm:items-center sm:justify-between sm:gap-y-0'
    >
      <div class='flex flex-col items-center gap-2 text-sm sm:flex-row sm:gap-x-4'>
        <!-- <a
          class='inline-flex gap-x-2 text-gray-600 hover:text-gray-800 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600'
          href='/terms'>Terms</a
        >

        <a
          class='inline-flex gap-x-2 text-gray-600 hover:text-gray-800 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600'
          href='/privacy'>Privacy</a
        > -->
        {
          siteConfig.registration && (
            <a
              class='py-[3px] text-xs text-muted-foreground'
              href={siteConfig.registration.url}
              target='_blank'
            >
              {siteConfig.registration.text}
            </a>
          )
        }
        <p class=''>Â© <samp>{year}</samp> {siteConfig.author}. All rights reserved.</p>
      </div>

      <div class='flex items-center justify-between'>
        <!-- Social Brands -->
        <!-- https://icones.js.org/collection/mingcute -->
        <div class='flex items-center gap-x-4'>
          {
            socialLinks.map((platform) => (
              <a
                class='inline-block text-muted-foreground transition-all hover:text-muted-foreground/75'
                href={platform.url}
                aria-label={platform.name}
              >
                <svg class='size-6'>
                  <use href={`/icons/social.svg#${SocialMediaIconId[platform.name]}`} />
                </svg>
              </a>
            ))
          }
          <!-- Rss -->
          <a
            class='inline-block text-muted-foreground transition-all hover:text-muted-foreground/75'
            href='/rss.xml'
            aria-label='rss'
          >
            <svg class='size-6'>
              <use href='/icons/social.svg#mingcute-rss-2-line'></use>
            </svg>
          </a>
          <!-- End Social Brands -->
        </div>
      </div>
    </div>
  </div>
</footer>
